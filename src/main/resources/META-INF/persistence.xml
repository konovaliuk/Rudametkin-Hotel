<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="Hotel" transaction-type="RESOURCE_LOCAL">

    <class>com.rudametkin.hotelsystem.Entitys.User</class>
    <class>com.rudametkin.hotelsystem.Entitys.RoomRegister</class>
    <class>com.rudametkin.hotelsystem.Entitys.Room</class>
    <class>com.rudametkin.hotelsystem.Entitys.Bill</class>
    <class>com.rudametkin.hotelsystem.Entitys.UserRole</class>
    <class>com.rudametkin.hotelsystem.Entitys.Role</class>

    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hoteldatabase"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>